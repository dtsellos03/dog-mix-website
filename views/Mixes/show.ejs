<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">My Dog's Mixtape</p>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class = "img-responsive" src="<%=Mix.image%>">
                <div class = "caption-full">
                    <!--<h4 class="pull-right"></h4>-->
                    <h4><%=Mix.name%></h4> <%=Mix.breed1%>
                    
                    <h5>Miracle:<%=Mix.miracleCount%> - Abomination:<%=Mix.abominationCount%></h5>
                    
                    
                    <h5>Submitted by <%=Mix.author.username%></h5>
                    <p> <%=Mix.description%> </p>
                    <% if(currentUser && Mix.author.id && Mix.author.id.equals(currentUser._id)){ %>
                        <a class = "btn btn-warning" href="/Mixes/<%=Mix._id %>/edit">Edit</a>
                        <form id="form_delete" action="/Mixes/<%= Mix._id %>?_method=DELETE" method="POST">
                             <button class="btn btn-danger">Delete</button>
                         </form>
                    <% } %>
                </div>
            <div class="well">
                <div class="text-right">
                     <a class = "btn btn-primary" href="/Mixes/<%=Mix._id%>/comments/new">Add comment</a>

                </div>
                <hr>
                <% Mix.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <%= comment.author.username %>
                            <span class="pull-right">10 days ago</span>
                               <p>
                                <%= comment.text %> 
                               </p>
                               <% if(currentUser && comment.author.id && comment.author.id.equals(currentUser._id)){ %>
                                   <a class="btn btn-xs btn-warning" 
                                     href="/Mixes/<%=Mix._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                   <form id="form_delete" action="/Mixes/<%=Mix._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                       <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                   </form>
                               <% } %>
                        </div>
                    </div>
                    
            <form action="/Mixes/<%=Mix._id%>/like" method="POST">
            <button class="btn btn-primary">Miracle</button>
        </form>
            <form action="/Mixes/<%=Mix._id%>/dislike" method="POST">
            <button class="btn btn-primary">Abomination</button>
        </form>

    
                <% }) %>
            </div>
            </div>
        </div>
    </div>
    
    






<p>
   
</p>
 


</div>

<% include ../partials/footer %>
